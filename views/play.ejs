<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
      font-family: 'Arial', sans-serif;
      position: relative;
      overflow: hidden;
    }

    body::before {
      content: 'ðŸŽµ';
      position: absolute;
      font-size: 200px;
      opacity: 0.1;
      animation: float 6s ease-in-out infinite;
      z-index: -1;
    }

    @keyframes float {
      0% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-20px) rotate(10deg); }
      100% { transform: translateY(0px) rotate(0deg); }
    }

    .container {
      width: 90%;
      max-width: 1200px;
      padding: 20px;
    }

    iframe {
      width: 100%;
      height: 60vh;
      border: none;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .time-selection-modal {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(0, 0, 0, 0.95);
      padding: 20px;
      border-radius: 15px;
      width: 320px;
      z-index: 1000;
      box-shadow: 0 0 20px rgba(255, 126, 95, 0.3);
      border: 1px solid rgba(255, 126, 95, 0.2);
    }

    .time-selection-modal h3 {
      color: #fff;
      text-align: center;
      margin: 0 0 15px 0;
      font-size: 1.2rem;
    }

    .time-inputs {
      background: rgba(255, 255, 255, 0.05);
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 15px;
    }

    .time-input {
      margin-bottom: 10px;
    }

    .time-input label {
      display: block;
      color: #ff7e5f;
      margin-bottom: 5px;
      font-size: 0.9rem;
      font-weight: bold;
    }

    .time-input input {
      width: 100%;
      padding: 8px;
      border: 1px solid rgba(255, 126, 95, 0.3);
      border-radius: 5px;
      background: rgba(0, 0, 0, 0.3);
      color: #fff;
      font-size: 1rem;
      text-align: center;
    }

    .modal-buttons {
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .modal-btn {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .confirm-btn {
      background: #8c5fff;
      color: #fff;
      font-weight: bold;
      width: 100%;
    }

    .confirm-btn:hover {
      background: #feb47b;
    }

    .cancel-btn {
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
    }

    .btn {
      margin: 10px;
      padding: 12px 30px;
      font-size: 1.1rem;
      color: #fff;
      background: linear-gradient(45deg, #ff7e5f, #feb47b);
      border: none;
      border-radius: 25px;
      text-decoration: none;
      transition: all 0.3s ease;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 5px 15px rgba(255, 126, 95, 0.4);
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(255, 126, 95, 0.6);
    }

    .btn.confirm {
      background: linear-gradient(45deg, #00c9ff, #92fe9d);
    }
  </style>
</head>
<body>
  <div class="container">
    <iframe 
      id="video-frame"
      src="https://www.youtube.com/embed/<%= videoId %>?autoplay=1" 
      allowfullscreen>
    </iframe>
    
    <div class="controls">
      <button class="btn" onclick="openModal()">Select Time Range</button>
      <a href="/choreographies" class="btn">Back to Choreographies</a>
    </div>
  </div>

  <div id="timeSelectionModal" class="time-selection-modal">
    <h3>Select Time Range for Recording</h3>
    <div class="time-inputs">
      <div class="time-input">
        <label for="startTime">Select Start Time (seconds)</label>
        <input type="number" id="startTime" min="0" value="0" placeholder="Enter start time">
      </div>
      <div class="time-input">
        <label for="endTime">Select End Time (seconds)</label>
        <input type="number" id="endTime" min="1" value="60" placeholder="Enter end time">
      </div>
    </div>
    <div class="modal-buttons">
      <button class="modal-btn confirm-btn" onclick="confirmTime()">Confirm Timings</button>
      <button class="modal-btn cancel-btn" onclick="closeModal()">Cancel</button>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById('timeSelectionModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('timeSelectionModal').style.display = 'none';
    }

    function confirmTime() {
      const startTime = document.getElementById('startTime').value;
      const endTime = document.getElementById('endTime').value;

      if (!startTime || !endTime) {
        alert('Please select both start and end times.');
        console.log('Start or end time is missing.');
        return;
      }

      if (parseInt(startTime) >= parseInt(endTime)) {
        alert('Start time must be less than end time.');
        console.log('Invalid time range: Start time >= End time.');
        return;
      }

      // Confirm selected time range and redirect to camera
      console.log(`Timings confirmed: Start Time - ${startTime}s, End Time - ${endTime}s`);
      localStorage.setItem('danceTimeRange', JSON.stringify({ startTime, endTime }));
      window.location.href = '/camera'; // Redirect to the camera page
    }
  </script>
</body>
</html>
